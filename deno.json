{
  "license": "MIT",
  "compilerOptions": {
    "strict": true,
    "jsx": "precompile",
    "jsxImportSource": "solid-js",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext",
      "deno.ns"
    ],
    "types": ["./configurations/typescript/css-modules.d.ts"]
  },
  "unstable": ["webgpu"],
  "nodeModulesDir": "auto",
  "vendor": true,
  "fmt": {
    "indentWidth": 2,
    "lineWidth": 120,
    "semiColons": true,
    "include": [
      "scripts/**/*",
      "configurations/**/*",
      "templates/**/*",
      "workspace/**/*",
      "deno.json"
    ],
    "exclude": ["workspace/apps/web/build", ".vite"]
  },
  "workspace": {
    "members": [
      "workspace/apps/web",
      "workspace/libs/hearth",
      "workspace/libs/hearth-math",
      "workspace/libs/ui-components",
      "workspace/libs/ui-logic-components",
      "workspace/libs/ui-signals",
      "workspace/apps/aoc",
      "workspace/libs/aoc"
    ]
  },
  "tasks": {
    "dev:web": {
      "description": "run web application",
      "command": "cd workspace/apps/web && deno task dev"
    },
    "dev:aoc": {
      "description": "run web application",
      "command": "cd workspace/apps/aoc && deno task dev"
    },
    "test": {
      "description": "run tests",
      "command": "deno test -A"
    },
    "bench": {
      "description": "run benchmarks",
      "command": "deno bench -A"
    },
    "build": {
      "description": "build application",
      "command": "deno run -A scripts/build-application.ts"
    },
    "aoc:create-day": {
      "description": "create a puzzle for the given year and day",
      "command": "deno task --config workspace/libs/aoc/deno.json create-day"
    },
    "aoc:test": {
      "description": "run tests for the given year",
      "command": "deno task test --filter aoc"
    },
    "aoc:bench": {
      "description": "run benchmarks for the given year",
      "command": "deno task bench"
    }
  },
  "imports": {
    "vite": "npm:vite@5.4.10"
  },
  "lint": {
    "rules": {
      "exclude": ["no-namespace", "no-explicit-any"]
    }
  }
}
